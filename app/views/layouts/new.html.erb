<div class="row mb-3 justify-content-center">
  <div class="col col-sm-10 col-md-8 col-lg-6">
    <h1 class="text-center">Formulario Crear Actor</h1>
    <form class="actors_new" id="actors_new" action="/actors" method="POST">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <div class="form-group">
        <label for="name">Actor's Name:</label>
        <input type="text" class="form-control" name="name" id="name" aria-describedby="name" placeholder="Your name here" required>
      </div>
      <div class="form-group">
        <label for="biography">Actor's Biography:</label>
        <textarea class="form-control rounded-0" name="bio" id="biography" rows="10" required></textarea>
      </div>
      <div class="form-group">
        <label for="birthdate">Actor's Birth Day:</label>
        <input type="date" class="form-control" name="birthdate" id="birthdate" required></input>
      </div>
      <div class="form-group">
        <label for="birthplace">Actor's Birth Place:</label>
        <input type="text" class="form-control" name="birthplace" id="birthplace" aria-describedby="birthplace" required>
      </div>
      <div class="form-group">
        <label for="image_url">Actor's Image URL:</label>
        <input type="url" class="form-control" name="image_url" id="image_url" aria-describedby="image_url" required>
      </div>
      <div class="form-group">
        <div class="row">
          <legend class="col-form-label col-sm-2 pt-0">Signos Vitales:</legend>
          <div class="col-sm-10">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="alive" id="alive" value="true">
              <label class="form-check-label" for="alive">
                Vivo
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="alive" id="alive" value="false">
              <label class="form-check-label" for="alive">
                Muerto
              </label>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="deathdate">Actor's Death Day:</label>
        <input type="date" class="form-control" name="deathdate" id="deathdate"></input>
      </div>
      <div class="form-group">
        <label for="deathplace">Actor's Death Place:</label>
        <input type="text" class="form-control" name="deathplace" id="deathplace" aria-describedby="deathplace">
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Crear Actor</button>
      </div>
    </form>
    <% if @errors %>
      <ul class="list-group">
      <% @errors.each do | error |%>
        <li class="list-group-item"><%= error %></li>
      <%  end %>
      </ul>    
    <% end %>
  </div>
</div>

