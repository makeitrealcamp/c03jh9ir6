<div>
  <%= link_to "Crear", new_actor_path %>
</div>

<table>
  <thead>
    <tr>
      <th scope="col" style="border: 1px solid black;">Id</th>
      <th scope="col" style="border: 1px solid black;">Name</th>
      <th scope="col" style="border: 1px solid black;">Bio</th>
      <th scope="col" style="border: 1px solid black;">Birth_date</th>
      <th scope="col" style="border: 1px solid black;">Birth_place</th>
      <th scope="col" style="border: 1px solid black;">Image_url</th>
      <th scope="col" style="border: 1px solid black;">Alive</th>
      <th scope="col" style="border: 1px solid black;">Death_date</th>
      <th scope="col" style="border: 1px solid black;">Death_place</th>
      <th scope="col" style="border: 1px solid black;">Created_at</th>
      <th scope="col" style="border: 1px solid black;">Updated_at</th>
    </tr>
  </thead>
  <tbody>
    <% @actors.each do |actor| %>
    <tr>
      <th><%= actor.id %></th>
      <th><%= actor.name %></th>
      <th><%= actor.bio %></th>
      <th><%= actor.birth_date %></th>
      <th><%= actor.birth_place %></th>
      <th><img src="<%= actor.image_url %>" alt="" style="width:60px;height:80px;"></th>
      <th><%= actor.alive %></th>
      <th><%= actor.death_date %></th>
      <th><%= actor.death_place %></th>
      <th><%= actor.created_at %></th>
      <th><%= actor.updated_at %></th>
    </tr>
    <% end %>
  </tbody>
</table>
