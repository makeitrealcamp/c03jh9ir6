<% @actors.each do |actor| %>
  <div style="display: block; border: 1px solid black; margin: 30px; padding: 15px">
    <img src="<%= actor.image_url %>" alt="photo_<%= actor.name %>" />
    <p><strong>Name:</strong> <%= link_to actor.name, actor_path(actor) %></p>
    <p><strong>Biography:</strong> <%= actor.bio %></p>
    <p><strong>Date birthday</strong>: <%= actor.birth_date %></p>
    <p><strong>Born place:</strong> <%= actor.birth_place %></p>
    <% unless actor.alive || actor.alive.eql?('yes') %>
      <p><strong>Death date:</strong> <%= actor.death_date %></p>
      <p><strong>Death place:</strong> <%= actor.death_place %></p>
    <% end %>
  </div>
<% end %>

