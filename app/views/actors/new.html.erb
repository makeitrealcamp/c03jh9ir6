<h1>Crear Actor</h1>

<%= form_for(@actor) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :bio %>
<%= f.text_area :bio %><br>
<%= f.label :birth_date %>
<%= f.date_field :birth_date %><br>
<%= f.label :birth_place %>
<%= f.text_field :birth_place %><br>
<%= f.label :image_url %>
<%= f.text_field :image_url %><br>
<%= f.label :alive %>
<%= f.check_box :alive %><br>
<%= f.label :death_date %>
<%= f.date_field :death_date %><br>
<%= f.label :death_place %>
<%= f.text_field :death_place %>
<%= f.submit %>
<% end %>